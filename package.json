{
  "name": "vue3-typescript-atsistemas",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint:script": "eslint --ext .ts,vue --ignore-path .gitignore . --fix && prettier -w -u . && stylelint \"./src/**/*.vue\" \"./src/**/*.scss\" --fix && vue-tsc --noEmit",
    "test:unit": "jest src",
    "cy:open": "cypress open",
    "cy:local": "cypress run --env configFile=local",
    "cy:development": "cypress run --env configFile=development",
    "cy:production": "cypress run --env configFile=production"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "pinia": "^2.0.12",
    "vue": "^3.2.25",
    "vue-i18n": "9",
    "vue-router": "4.0.14"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/user-event": "^14.0.0",
    "@testing-library/vue": "^6.5.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.17",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "cypress": "^9.5.3",
    "eslint": "^8.12.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "postcss-html": "^1.3.0",
    "prettier": "^2.6.1",
    "sass": "^1.49.9",
    "stylelint": "^14.6.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-tsc": "^0.29.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*": "prettier -w -u"
  }
}
